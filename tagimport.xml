<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade">
	<name>COM_TAGIMPORT</name>
	<author>NGRR</author>
	<creationDate>Junio 2025</creationDate>
	<copyright>(C) 2025 Novillo</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>nrodriguezrdd@gmail.com</authorEmail>
	<authorUrl></authorUrl>	<version>1.1.0</version>
	<description>COM_TAGIMPORT_XML_DESCRIPTION</description>
	<administration>
		<menu>COM_TAGIMPORT</menu>
		<files folder="admin">
			<filename>tagimport.php</filename>
			<filename>config.xml</filename>
			<folder>language</folder>
		</files>
		<languages folder="admin/language">
			<language tag="en-GB">en-GB/com_tagimport.ini</language>
			<language tag="en-GB">en-GB/com_tagimport.sys.ini</language>
			<language tag="es-ES">es-ES/com_tagimport.ini</language>
			<language tag="es-ES">es-ES/com_tagimport.sys.ini</language>
		</languages>
		<config>
			<fields name="params">
				<fieldset name="basic">
					<field
						name="enable_logging"
						type="radio"
						label="COM_TAGIMPORT_ENABLE_LOGGING_LABEL"
						description="COM_TAGIMPORT_ENABLE_LOGGING_DESC"
						default="1"
						class="btn-group btn-group-yesno"
						>
						<option value="1">JYES</option>
						<option value="0">JNO</option>
					</field>
					<field
						name="debug_mode"
						type="radio"
						label="COM_TAGIMPORT_DEBUG_MODE_LABEL"
						description="COM_TAGIMPORT_DEBUG_MODE_DESC"
						default="0"
						class="btn-group btn-group-yesno"
						>
						<option value="1">JYES</option>
						<option value="0">JNO</option>
					</field>
				</fieldset>
			</fields>
		</config>
	</administration>
</extension>
